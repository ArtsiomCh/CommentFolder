<idea-plugin>
  <id>com.github.ArtsiomCh.CommentFolder</id>
  <name>CommentFolder</name>
  <version>0.1.0</version>
  <vendor email="achapialiou@gmail.com" url="http://github.com/ArtsiomCh/CommentFolder">Artsiom Chapialiou</vendor>

  <description><![CDATA[
      Enable folding for multi-line comments block (fix <a href="https://youtrack.jetbrains.com/issue/IDEA-106702">IDEA-106702</a>) :<br>
<pre>
/* multi
   line
   comments
   block
*/</pre>
    ]]></description>

  <change-notes><![CDATA[
      0.1.0 - Initial release: Enable folding for multi-line comments block
    ]]></change-notes>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
  <idea-version since-build="173.0" until-build="191.0"/>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
       on how to target different products -->
  <!-- uncomment to enable plugin in all products
  <depends>com.intellij.modules.lang</depends>
  -->
  <depends>com.intellij.modules.java</depends>

  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->
    <lang.foldingBuilder language="JAVA" implementationClass="com.github.artsiomch.commentfolder.BlockCommentFoldingBuilder"/>
  </extensions>

  <actions>
    <!-- Add your actions here -->
  </actions>

</idea-plugin>